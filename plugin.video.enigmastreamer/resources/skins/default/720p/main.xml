<?xml version="1.0" encoding="UTF-8"?>
<window>
    <animation effect="fade" time="100" start="50" end="100">WindowOpen</animation>
    <animation effect="fade" time="100" start="100" end="50">WindowClose</animation>
    <controls>
        <!-- Hidden Controls -->
        <control type="button" id="3000">
            <description>Full screen button</description>
            <visible>false</visible>
        </control>
        <!-- Background -->
        <control type="image">
            <width>1280</width>
            <height>720</height>
            <texture colordiffuse="80FFFFFF">common/background.png</texture>
        </control>
        <!-- Video Window -->
        <control type="group">
            <visible>Player.HasVideo + !VideoPlayer.IsFullscreen + !SlideShow.IsActive</visible>
            <control type="videowindow">
                <hitrect x="0" y="0" w="0" h="0"/>
            </control>
            <control type="image">
                <texture colordiffuse="AAFFFFFF">common/background_dark.png</texture>
            </control>
        </control>
        <!-- Logo -->
        <control type="group">
            <control type="image">
                <top>40</top>
                <left>40</left>
                <width>120</width>
                <height>120</height>
                <aspectratio>keep</aspectratio>
                <texture>../../../icon.png</texture>
            </control>
            <control type="button" id="3001">
                <top>40</top>
                <left>40</left>
                <width>120</width>
                <height>120</height>
                <aspectratio>keep</aspectratio>
                <texturefocus>-</texturefocus>
                <texturenofocus>-</texturenofocus>
            </control>
        </control>
        <!-- Information -->
        <control type="label">
            <top>70</top>
            <left>180</left>
            <width>500</width>
            <height>30</height>
            <align>left</align>
            <label>Enigma Streamer</label>
            <textcolor>FFFFFFFF</textcolor>
        </control>
        <control type="label" id="1">
            <top>100</top>
            <left>180</left>
            <width>500</width>
            <height>30</height>
            <align>left</align>
            <label>Loading bouquets</label>
            <textcolor>FF888888</textcolor>
        </control>
        <!-- Clock -->
        <control type="label">
            <top>70</top>
            <right>50</right>
            <width>500</width>
            <height>30</height>
            <align>right</align>
            <label>$INFO[System.Time]</label>
            <textcolor>FFFFFFFF</textcolor>
        </control>
        <control type="label">
            <top>100</top>
            <right>50</right>
            <width>500</width>
            <height>30</height>
            <align>right</align>
            <label>$INFO[System.Date(DDD)], $INFO[System.Date(d mmm)]</label>
            <textcolor>FF888888</textcolor>
        </control>
        <!-- Zap Number -->
        <control type="group" id="7000">
            <top>50</top>
            <width>200</width>
            <height>60</height>
            <visible>String.IsEqual(Window().Property(ZapVisible), true)</visible>
            <!-- Background -->
            <control type="image">
                <texture colordiffuse="BEFFFFFF">common/background_dark.png</texture>
            </control>
            <!-- Sidebar -->
            <control type="image">
                <right>0</right>
                <width>5</width>
                <height>60</height>
                <texture>common/background_accent.png</texture>
            </control>
            <!-- Number -->
            <control type="label" id="7001">
                <right>15</right>
                <width>200</width>
                <height>60</height>
                <align>right</align>
                <aligny>center</aligny>
            </control>
        </control>
        <!-- Menu Buttons -->
        <control type="panel" id="1000">
            <left>50</left>
            <right>50</right>
            <top>200</top>
            <width>1280</width>
            <height>40</height>
            <ondown>1001</ondown>
            <orientation>horizontal</orientation>
            <itemlayout width="280" height="40">
                <control type="image">
                    <width>275</width>
                    <height>40</height>
                    <texture colordiffuse="BEFFFFFF">common/background_dark.png</texture>
                </control>
                <control type="image">
                    <left>4</left>
                    <centertop>50%</centertop>
                    <width>30</width>
                    <height>30</height>
                    <aspectratio>keep</aspectratio>
                    <texture>$INFO[ListItem.Art(thumb)]</texture>
                </control>
                <control type="label">
                    <left>45</left>
                    <width>225</width>
                    <height>40</height>
                    <aligny>center</aligny>
                    <textcolor>FFFFFFFF</textcolor>
                    <selectedcolor>FF888888</selectedcolor>
                    <info>ListItem.Label</info>
                </control>
            </itemlayout>
            <focusedlayout width="280" height="40">
                <control type="image">
                    <width>275</width>
                    <height>40</height>
                    <texture colordiffuse="78FFFFFF">common/background_accent.png</texture>
                </control>
                <control type="image">
                    <left>4</left>
                    <centertop>50%</centertop>
                    <width>30</width>
                    <height>30</height>
                    <aspectratio>keep</aspectratio>
                    <texture>$INFO[ListItem.Art(thumb)]</texture>
                </control>
                <control type="label">
                    <left>45</left>
                    <width>225</width>
                    <height>40</height>
                    <aligny>center</aligny>
                    <textcolor>FFFFFFFF</textcolor>
                    <selectedcolor>FF888888</selectedcolor>
                    <info>ListItem.Label</info>
                </control>
            </focusedlayout>
        </control>
        <!-- Bouquet List -->
        <control type="group">
            <left>50</left>
            <right>50</right>
            <top>255</top>
            <control type="panel" id="1001">
                <pagecontrol>2001</pagecontrol>
                <onup>1000</onup>
                <onleft condition="Player.HasVideo">SendClick(3000)</onleft>
                <onright>2001</onright>
                <orientation>vertical</orientation>
                <itemlayout width="1280" height="50">
                    <control type="image">
                        <width>1280</width>
                        <height>48</height>
                        <texture colordiffuse="BEFFFFFF">common/background_dark.png</texture>
                    </control>
                    <control type="label">
                        <left>10</left>
                        <width>1280</width>
                        <height>48</height>
                        <aligny>center</aligny>
                        <textcolor>FFFFFFFF</textcolor>
                        <selectedcolor>FF888888</selectedcolor>
                        <info>ListItem.Label</info>
                    </control>
                </itemlayout>
                <focusedlayout width="1280" height="50">
                    <control type="image">
                        <width>1280</width>
                        <height>48</height>
                        <texture colordiffuse="78FFFFFF">common/background_accent.png</texture>
                    </control>
                    <control type="label">
                        <left>10</left>
                        <width>1280</width>
                        <height>48</height>
                        <aligny>center</aligny>
                        <textcolor>FFFFFFFF</textcolor>
                        <selectedcolor>FF888888</selectedcolor>
                        <info>ListItem.Label</info>
                        <scroll>true</scroll>
                        <scrollspeed>60</scrollspeed>
                    </control>
                </focusedlayout>
            </control>
            <control type="scrollbar" id="2001">
                <right>0</right>
                <width>8</width>
                <height>448</height>
                <onup>1000</onup>
                <onleft>1001</onleft>
                <texturesliderbarfocus>common/background_accent.png</texturesliderbarfocus>
                <texturesliderbar colordiffuse="60888888">common/background_light.png</texturesliderbar>
                <texturesliderbackground>-</texturesliderbackground>
            </control>
        </control>
    </controls>
</window>