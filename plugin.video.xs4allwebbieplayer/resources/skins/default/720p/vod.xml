<?xml version="1.0" encoding="UTF-8"?>
<window>
    <animation effect="fade" time="100" start="50" end="100">WindowOpen</animation>
    <animation effect="fade" time="100" start="100" end="50">WindowClose</animation>
    <controls>
        <!-- Background -->
        <control type="image" id="8000">
            <width>1280</width>
            <height>720</height>
            <texture>common/background_addon.png</texture>
        </control>
        <!-- Music Animation -->
        <control type="image">
            <bottom>0</bottom>
            <centerleft>50%</centerleft>
            <centerright>50%</centerright>
            <width>670</width>
            <height>230</height>
            <aspectratio>keep</aspectratio>
            <texture colordiffuse="20888888">common/radioanimation.gif</texture>
            <visible>Player.HasAudio</visible>
        </control>
        <!-- Video Window -->
        <control type="group">
            <visible>Player.HasVideo + !VideoPlayer.IsFullscreen + !SlideShow.IsActive</visible>
            <control type="videowindow">
                <hitrect x="0" y="0" w="0" h="0"/>
            </control>
            <control type="image">
                <texture colordiffuse="A0FFFFFF">common/background_dark.png</texture>
            </control>
        </control>
        <!-- Logo -->
        <control type="group">
            <control type="image">
                <top>50</top>
                <left>50</left>
                <width>223</width>
                <height>100</height>
                <aspectratio>keep</aspectratio>
                <texture>common/logo.png</texture>
            </control>
            <control type="button" id="3001">
                <top>50</top>
                <left>50</left>
                <width>223</width>
                <height>100</height>
                <aspectratio>keep</aspectratio>
                <texturefocus>-</texturefocus>
                <texturenofocus>-</texturenofocus>
            </control>
        </control>
        <!-- Information -->
        <control type="label" id="2">
            <top>70</top>
            <left>325</left>
            <width>500</width>
            <height>30</height>
            <align>left</align>
            <textcolor>FFFFFFFF</textcolor>
        </control>
        <control type="label" id="1">
            <top>100</top>
            <left>325</left>
            <width>500</width>
            <height>30</height>
            <align>left</align>
            <textcolor>FF888888</textcolor>
        </control>
        <control type="label" id="3">
            <top>162</top>
            <left>50</left>
            <width>1230</width>
            <height>30</height>
            <textcolor>FFFFFFFF</textcolor>
        </control>
        <control type="label" id="4">
            <top>130</top>
            <left>325</left>
            <width>500</width>
            <height>30</height>
            <align>left</align>
            <textcolor>FF888888</textcolor>
        </control>
        <!-- Volume Muted -->
        <control type="image">
            <top>162</top>
            <right>45</right>
            <width>30</width>
            <height>30</height>
            <aspectratio>keep</aspectratio>
            <texture>common/volumemute.png</texture>
            <visible>Player.Muted</visible>
        </control>
        <!-- Media paused -->
        <control type="image">
            <top>162</top>
            <right>85</right>
            <width>30</width>
            <height>30</height>
            <aspectratio>keep</aspectratio>
            <texture>common/pause.png</texture>
            <visible>Player.Paused</visible>
        </control>
        <!-- Sleep Timer -->
        <control type="image">
            <top>162</top>
            <right>125</right>
            <width>30</width>
            <height>30</height>
            <aspectratio>keep</aspectratio>
            <texture>common/sleep.png</texture>
            <visible>String.IsEqual(Window(10000).Property(WebbiePlayerSleepTimer), true)</visible>
        </control>
        <!-- Roaming -->
        <control type="image">
            <top>162</top>
            <right>165</right>
            <width>30</width>
            <height>30</height>
            <aspectratio>keep</aspectratio>
            <texture>common/roaming.png</texture>
            <visible>String.IsEqual(Window(10000).Property(WebbiePlayerHomeAccess), false)</visible>
        </control>
        <!-- Clock -->
        <control type="label">
            <top>70</top>
            <right>50</right>
            <width>500</width>
            <height>30</height>
            <align>right</align>
            <label>$INFO[System.Time]</label>
            <textcolor>FFFFFFFF</textcolor>
        </control>
        <control type="label">
            <top>100</top>
            <right>50</right>
            <width>500</width>
            <height>30</height>
            <align>right</align>
            <label>$INFO[System.Date(DDD)], $INFO[System.Date(d mmm)]</label>
            <textcolor>FF888888</textcolor>
        </control>
        <!-- Fullscreen Button -->
        <control type="group">
            <left>10</left>
            <top>245</top>
            <width>35</width>
            <height>475</height>
            <visible>Player.HasVideo + !VideoPlayer.IsFullscreen + !SlideShow.IsActive</visible>
            <control type="button" id="9000">
                <width>35</width>
                <height>475</height>
                <texturefocus colordiffuse="A0888888">common/background_accent.png</texturefocus>
                <texturenofocus colordiffuse="BEFFFFFF">common/background_dark.png</texturenofocus>
            </control>
            <control type="image">
                <top>5</top>
                <left>5</left>
                <width>25</width>
                <height>25</height>
                <aspectratio>keep</aspectratio>
                <texture>common/fullscreen.png</texture>
            </control>
        </control>
        <!-- Navigation Buttons -->
        <control type="panel" id="1001">
            <left>50</left>
            <right>50</right>
            <top>200</top>
            <width>1180</width>
            <height>40</height>
            <onup condition="Control.IsVisible(1000) + Integer.IsGreater(Container(1000).NumItems,0)">Control.setFocus(1000, 99999)</onup>
            <ondown>1000</ondown>
            <orientation>horizontal</orientation>
            <itemlayout width="265" height="40">
                <control type="image">
                    <width>260</width>
                    <height>40</height>
                    <texture colordiffuse="BEFFFFFF">common/background_dark.png</texture>
                </control>
                <control type="image">
                    <left>4</left>
                    <centertop>50%</centertop>
                    <width>30</width>
                    <height>30</height>
                    <aspectratio>keep</aspectratio>
                    <texture>$INFO[ListItem.Art(thumb)]</texture>
                </control>
                <control type="label">
                    <left>45</left>
                    <width>225</width>
                    <height>40</height>
                    <aligny>center</aligny>
                    <textcolor>FFFFFFFF</textcolor>
                    <selectedcolor>FF888888</selectedcolor>
                    <info>ListItem.Label</info>
                </control>
            </itemlayout>
            <focusedlayout width="265" height="40">
                <control type="image">
                    <width>260</width>
                    <height>40</height>
                    <texture colordiffuse="A0888888">common/background_accent.png</texture>
                </control>
                <control type="image">
                    <left>4</left>
                    <centertop>50%</centertop>
                    <width>30</width>
                    <height>30</height>
                    <aspectratio>keep</aspectratio>
                    <texture>$INFO[ListItem.Art(thumb)]</texture>
                </control>
                <control type="label">
                    <left>45</left>
                    <width>225</width>
                    <height>40</height>
                    <aligny>center</aligny>
                    <textcolor>FFFFFFFF</textcolor>
                    <selectedcolor>FF888888</selectedcolor>
                    <info>ListItem.Label</info>
                </control>
            </focusedlayout>
        </control>
        <!-- Item List -->
        <control type="group">
            <left>50</left>
            <top>245</top>
            <width>800</width>
            <height>475</height>
            <control type="panel" id="1000">
                <onup>1001</onup>
                <onleft>SendClick(9000)</onleft>
                <onright>2001</onright>
                <pagecontrol>2001</pagecontrol>
                <orientation>vertical</orientation>
                <itemlayout width="800" height="64">
                    <control type="image">
                        <width>800</width>
                        <height>62</height>
                        <texture colordiffuse="BEFFFFFF">common/background_dark.png</texture>
                    </control>
                    <control type="image">
                        <top>3</top>
                        <left>3</left>
                        <width>50</width>
                        <height>50</height>
                        <aspectratio>keep</aspectratio>
                        <texture>$INFO[ListItem.Art(thumb)]</texture>
                    </control>
                    <control type="label">
                        <left>60</left>
                        <width>720</width>
                        <height>30</height>
                        <align>left</align>
                        <textcolor>FFFFFFFF</textcolor>
                        <selectedcolor>FF888888</selectedcolor>
                        <info>ListItem.Property(ProgramName)</info>
                    </control>
                    <control type="label">
                        <top>30</top>
                        <left>60</left>
                        <width>720</width>
                        <height>30</height>
                        <align>left</align>
                        <textcolor>FF888888</textcolor>
                        <selectedcolor>FF888888</selectedcolor>
                        <info>ListItem.Property(ProgramDetails)</info>
                    </control>
                </itemlayout>
                <focusedlayout width="800" height="64">
                    <control type="image">
                        <width>800</width>
                        <height>62</height>
                        <texture colordiffuse="A0888888">common/background_accent.png</texture>
                    </control>
                    <control type="image">
                        <top>3</top>
                        <left>3</left>
                        <width>50</width>
                        <height>50</height>
                        <aspectratio>keep</aspectratio>
                        <texture>$INFO[ListItem.Art(thumb)]</texture>
                    </control>
                    <control type="label">
                        <left>60</left>
                        <width>720</width>
                        <height>30</height>
                        <align>left</align>
                        <textcolor>FFFFFFFF</textcolor>
                        <selectedcolor>FF888888</selectedcolor>
                        <info>ListItem.Property(ProgramName)</info>
                        <scroll>true</scroll>
                        <scrollspeed>60</scrollspeed>
                    </control>
                    <control type="label">
                        <top>30</top>
                        <left>60</left>
                        <width>720</width>
                        <height>30</height>
                        <align>left</align>
                        <textcolor>FF888888</textcolor>
                        <selectedcolor>FF888888</selectedcolor>
                        <info>ListItem.Property(ProgramDetails)</info>
                        <scroll>true</scroll>
                        <scrollspeed>60</scrollspeed>
                    </control>
                </focusedlayout>
            </control>
            <control type="scrollbar" id="2001">
                <right>0</right>
                <width>8</width>
                <onup>1001</onup>
                <onleft>1000</onleft>
                <onright>2000</onright>
                <texturesliderbarfocus>common/background_accent.png</texturesliderbarfocus>
                <texturesliderbar colordiffuse="DC888888">common/background_light.png</texturesliderbar>
                <texturesliderbackground>-</texturesliderbackground>
            </control>
        </control>
        <!-- Description -->
        <control type="group">
            <top>245</top>
            <right>50</right>
            <width>375</width>
            <height>475</height>
            <control type="image">
                <texture colordiffuse="BEFFFFFF">common/background_dark.png</texture>
            </control>
            <control type="textbox">
                <left>5</left>
                <width>355</width>
                <height>475</height>
                <align>left</align>
                <aligny>top</aligny>
                <wrapmultiline>true</wrapmultiline>
                <textcolor>FFFFFFFF</textcolor>
                <label>$INFO[Container(1000).ListItem().Property(ProgramNameDesc)][CR][CR]$INFO[Container(1000).ListItem().Property(ProgramDetails)][CR][CR]$INFO[Container(1000).ListItem().Property(ProgramDescription)]</label>
                <autoscroll delay="4000" time="2500" repeat="5000"/>
                <pagecontrol>2000</pagecontrol>
            </control>
            <control type="scrollbar" id="2000">
                <width>375</width>
                <onup>1001</onup>
                <onleft>2001</onleft>
                <onright>1001</onright>
                <texturesliderbarfocus>common/scrollbar_accent_400.png</texturesliderbarfocus>
                <texturesliderbar colordiffuse="DC888888">common/scrollbar_light_400.png</texturesliderbar>
                <texturesliderbackground>-</texturesliderbackground>
            </control>
        </control>
    </controls>
</window>