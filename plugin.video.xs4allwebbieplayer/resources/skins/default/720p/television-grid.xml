<?xml version="1.0" encoding="UTF-8"?>
<window>
    <animation effect="fade" time="100" start="50" end="100">WindowOpen</animation>
    <animation effect="fade" time="100" start="100" end="50">WindowClose</animation>
    <controls>
        <!-- Background -->
        <control type="image">
            <width>1280</width>
            <height>720</height>
            <texture>common/background_addon.png</texture>
        </control>
        <!-- Music Animation -->
        <control type="image">
            <bottom>0</bottom>
            <centerleft>50%</centerleft>
            <centerright>50%</centerright>
            <width>670</width>
            <height>230</height>
            <aspectratio>keep</aspectratio>
            <texture colordiffuse="20888888">common/radioanimation.gif</texture>
            <visible>Player.HasAudio</visible>
        </control>
        <!-- Video Window -->
        <control type="group">
            <visible>Player.HasVideo + !VideoPlayer.IsFullscreen + !SlideShow.IsActive</visible>
            <control type="videowindow">
                <hitrect x="0" y="0" w="0" h="0"/>
            </control>
            <control type="image">
                <texture colordiffuse="A0FFFFFF">common/background_dark.png</texture>
            </control>
        </control>
        <!-- Logo -->
        <control type="group">
            <control type="image">
                <top>50</top>
                <left>50</left>
                <width>284</width>
                <height>100</height>
                <aspectratio>keep</aspectratio>
                <texture>common/logo.png</texture>
            </control>
            <control type="button" id="3001">
                <top>50</top>
                <left>50</left>
                <width>284</width>
                <height>100</height>
                <aspectratio>keep</aspectratio>
                <texturefocus>-</texturefocus>
                <texturenofocus>-</texturenofocus>
            </control>
        </control>
        <!-- Information -->
        <control type="label">
            <top>70</top>
            <left>350</left>
            <width>500</width>
            <height>30</height>
            <align>left</align>
            <label>Televisie</label>
            <textcolor>FFFFFFFF</textcolor>
        </control>
        <control type="label" id="1">
            <top>100</top>
            <left>350</left>
            <width>500</width>
            <height>30</height>
            <align>left</align>
            <label>Zenders laden</label>
            <textcolor>FF888888</textcolor>
        </control>
        <control type="label" id="3">
            <top>162</top>
            <left>50</left>
            <width>1230</width>
            <height>30</height>
            <textcolor>FFFFFFFF</textcolor>
        </control>
        <!-- Volume Muted -->
        <control type="image">
            <top>162</top>
            <right>45</right>
            <width>30</width>
            <height>30</height>
            <aspectratio>keep</aspectratio>
            <texture>common/volumemute.png</texture>
            <visible>Player.Muted</visible>
        </control>
        <!-- Media paused -->
        <control type="image">
            <top>162</top>
            <right>85</right>
            <width>30</width>
            <height>30</height>
            <aspectratio>keep</aspectratio>
            <texture>common/pause.png</texture>
            <visible>Player.Paused</visible>
        </control>
        <!-- Sleep Timer -->
        <control type="image">
            <top>162</top>
            <right>125</right>
            <width>30</width>
            <height>30</height>
            <aspectratio>keep</aspectratio>
            <texture>common/sleep.png</texture>
            <visible>String.IsEqual(Window(10000).Property(WebbiePlayerSleepTimer), true)</visible>
        </control>
        <!-- Roaming -->
        <control type="image">
            <top>162</top>
            <right>165</right>
            <width>30</width>
            <height>30</height>
            <aspectratio>keep</aspectratio>
            <texture>common/roaming.png</texture>
            <visible>String.IsEqual(Window(10000).Property(WebbiePlayerHomeAccess), false)</visible>
        </control>
        <!-- Clock -->
        <control type="label">
            <top>70</top>
            <right>50</right>
            <width>500</width>
            <height>30</height>
            <align>right</align>
            <label>$INFO[System.Time]</label>
            <textcolor>FFFFFFFF</textcolor>
        </control>
        <control type="label">
            <top>100</top>
            <right>50</right>
            <width>500</width>
            <height>30</height>
            <align>right</align>
            <label>$INFO[System.Date(DDD)], $INFO[System.Date(d mmm)]</label>
            <textcolor>FF888888</textcolor>
        </control>
        <!-- Zap Number -->
        <control type="group" id="7000">
            <height>110</height>
            <visible>String.IsEqual(Window().Property(ZapVisible), true)</visible>
            <!-- Background -->
            <control type="image">
                <texture colordiffuse="BEFFFFFF">common/background_dark.png</texture>
            </control>
            <!-- Underbar -->
            <control type="image">
                <top>105</top>
                <height>5</height>
                <texture>common/background_accent.png</texture>
            </control>
            <!-- Text -->
            <control type="label" id="7001">
                <top>50</top>
                <left>5</left>
                <height>60</height>
                <aligny>center</aligny>
            </control>
        </control>
        <!-- Channel and Program Description -->
        <control type="group">
            <top>245</top>
            <right>50</right>
            <width>378</width>
            <height>475</height>
            <control type="image">
                <texture colordiffuse="BEFFFFFF">common/background_dark.png</texture>
            </control>
            <control type="textbox">
                <left>5</left>
                <width>355</width>
                <height>475</height>
                <align>left</align>
                <aligny>top</aligny>
                <wrapmultiline>true</wrapmultiline>
                <textcolor>FFFFFFFF</textcolor>
                <label>$INFO[Container(1000).ListItem().Property(ProgramDescription)]</label>
                <autoscroll delay="4000" time="2500" repeat="5000"/>
                <pagecontrol>2000</pagecontrol>
            </control>
            <control type="scrollbar" id="2000">
                <width>378</width>
                <height>475</height>
                <texturesliderbarfocus>common/scrollbar_accent_400.png</texturesliderbarfocus>
                <texturesliderbar colordiffuse="60888888">common/scrollbar_dark_400.png</texturesliderbar>
                <texturesliderbackground colordiffuse="60888888">common/scrollbar_light_400.png</texturesliderbackground>
                <onleft>2001</onleft>
            </control>
        </control>
        <!-- Fullscreen Button -->
        <control type="group">
            <left>10</left>
            <top>245</top>
            <width>35</width>
            <height>480</height>
            <visible>Player.HasVideo + !VideoPlayer.IsFullscreen + !SlideShow.IsActive</visible>
            <control type="button" id="9000">
                <width>35</width>
                <height>480</height>
                <texturefocus colordiffuse="A0888888">common/background_accent.png</texturefocus>
                <texturenofocus colordiffuse="BEFFFFFF">common/background_dark.png</texturenofocus>
            </control>
            <control type="image">
                <top>5</top>
                <left>5</left>
                <width>25</width>
                <height>25</height>
                <aspectratio>keep</aspectratio>
                <texture>common/fullscreen.png</texture>
            </control>
        </control>
        <!-- Navigation Buttons -->
        <control type="panel" id="1001">
            <left>50</left>
            <right>50</right>
            <top>200</top>
            <width>1280</width>
            <height>40</height>
            <ondown>1000</ondown>
            <orientation>horizontal</orientation>
            <itemlayout width="265" height="40">
                <control type="image">
                    <width>260</width>
                    <height>40</height>
                    <texture colordiffuse="BEFFFFFF">common/background_dark.png</texture>
                </control>
                <control type="image">
                    <left>4</left>
                    <centertop>50%</centertop>
                    <width>30</width>
                    <height>30</height>
                    <aspectratio>keep</aspectratio>
                    <texture>$INFO[ListItem.Art(thumb)]</texture>
                </control>
                <control type="label">
                    <left>45</left>
                    <width>225</width>
                    <height>40</height>
                    <aligny>center</aligny>
                    <textcolor>FFFFFFFF</textcolor>
                    <selectedcolor>FF888888</selectedcolor>
                    <info>ListItem.Label</info>
                </control>
            </itemlayout>
            <focusedlayout width="265" height="40">
                <control type="image">
                    <width>260</width>
                    <height>40</height>
                    <texture colordiffuse="A0888888">common/background_accent.png</texture>
                </control>
                <control type="image">
                    <left>4</left>
                    <centertop>50%</centertop>
                    <width>30</width>
                    <height>30</height>
                    <aspectratio>keep</aspectratio>
                    <texture>$INFO[ListItem.Art(thumb)]</texture>
                </control>
                <control type="label">
                    <left>45</left>
                    <width>225</width>
                    <height>40</height>
                    <aligny>center</aligny>
                    <textcolor>FFFFFFFF</textcolor>
                    <selectedcolor>FF888888</selectedcolor>
                    <info>ListItem.Label</info>
                </control>
            </focusedlayout>
        </control>
        <!-- Channel List -->
        <control type="group">
            <left>50</left>
            <top>245</top>
            <width>800</width>
            <control type="panel" id="1000">
                <onup>1001</onup>
                <onleft>SendClick(9000)</onleft>
                <onright>2001</onright>
                <pagecontrol>2001</pagecontrol>
                <itemlayout width="160" height="160">
                    <control type="image">
                        <width>156</width>
                        <height>156</height>
                        <texture colordiffuse="BEFFFFFF">common/background_dark.png</texture>
                    </control>
                    <control type="image">
                        <top>3</top>
                        <left>45</left>
                        <width>65</width>
                        <height>65</height>
                        <aspectratio>keep</aspectratio>
                        <texture>$INFO[ListItem.Art(thumb)]</texture>
                    </control>
                    <control type="label">
                        <top>70</top>
                        <left>5</left>
                        <right>5</right>
                        <width>146</width>
                        <height>30</height>
                        <align>center</align>
                        <textcolor>FF888888</textcolor>
                        <selectedcolor>FF888888</selectedcolor>
                        <info>ListItem.Property(ChannelNumber)</info>
                    </control>
                    <control type="textbox">
                        <top>92</top>
                        <left>5</left>
                        <right>5</right>
                        <width>146</width>
                        <height>60</height>
                        <align>center</align>
                        <aligny>center</aligny>
                        <textcolor>FFFFFFFF</textcolor>
                        <selectedcolor>FF888888</selectedcolor>
                        <info>ListItem.Property(ProgramNowName)</info>
                    </control>
                    <control type="progress">
                        <top>151</top>
                        <left>5</left>
                        <right>5</right>
                        <width>146</width>
                        <height>5</height>
                        <texturebg colordiffuse="FF888888">common/background_light.png</texturebg>
                        <midtexture>common/background_accent.png</midtexture>
                        <info>ListItem.Property(ProgramProgressPercent)</info>
                    </control>
                    <control type="image">
                        <top>6</top>
                        <left>6</left>
                        <width>18</width>
                        <height>18</height>
                        <aspectratio>keep</aspectratio>
                        <texture>common/star.png</texture>
                        <visible>String.IsEqual(ListItem().Property(ChannelFavorite), true)</visible>
                    </control>
                    <control type="image">
                        <top>6</top>
                        <left>64</left>
                        <width>18</width>
                        <height>18</height>
                        <aspectratio>keep</aspectratio>
                        <texture>common/alarm.png</texture>
                        <visible>String.IsEqual(ListItem().Property(ProgramNextAlarm), true)</visible>
                    </control>
                    <control type="image">
                        <top>6</top>
                        <left>86</left>
                        <width>18</width>
                        <height>18</height>
                        <aspectratio>keep</aspectratio>
                        <texture>common/rerun.png</texture>
                        <visible>String.IsEqual(ListItem().Property(ProgramNowRerun), true)</visible>
                    </control>
                    <control type="image">
                        <top>6</top>
                        <left>108</left>
                        <width>18</width>
                        <height>18</height>
                        <aspectratio>keep</aspectratio>
                        <texture>common/record.png</texture>
                        <visible>String.IsEqual(ListItem().Property(ProgramNowRecordEvent), true)</visible>
                    </control>
                    <control type="image">
                        <top>6</top>
                        <left>130</left>
                        <width>18</width>
                        <height>18</height>
                        <aspectratio>keep</aspectratio>
                        <texture>common/recordseries.png</texture>
                        <visible>String.IsEqual(ListItem().Property(ProgramNowRecordSeries), true)</visible>
                    </control>
                </itemlayout>
                <focusedlayout width="160" height="160">
                    <control type="image">
                        <width>156</width>
                        <height>156</height>
                        <texture colordiffuse="A0888888">common/background_accent.png</texture>
                    </control>
                    <control type="image">
                        <top>3</top>
                        <left>45</left>
                        <width>65</width>
                        <height>65</height>
                        <aspectratio>keep</aspectratio>
                        <texture>$INFO[ListItem.Art(thumb)]</texture>
                    </control>
                    <control type="label">
                        <top>70</top>
                        <left>5</left>
                        <right>5</right>
                        <width>146</width>
                        <height>30</height>
                        <align>center</align>
                        <textcolor>FF888888</textcolor>
                        <selectedcolor>FF888888</selectedcolor>
                        <info>ListItem.Property(ChannelNumber)</info>
                    </control>
                    <control type="textbox">
                        <top>92</top>
                        <left>5</left>
                        <right>5</right>
                        <width>146</width>
                        <height>60</height>
                        <align>center</align>
                        <aligny>center</aligny>
                        <textcolor>FFFFFFFF</textcolor>
                        <selectedcolor>FF888888</selectedcolor>
                        <info>ListItem.Property(ProgramNowName)</info>
                        <autoscroll delay="0" time="1000" repeat="1000"/>
                    </control>
                    <control type="progress">
                        <top>151</top>
                        <left>5</left>
                        <right>5</right>
                        <width>146</width>
                        <height>5</height>
                        <texturebg colordiffuse="FF888888">common/background_light.png</texturebg>
                        <midtexture>common/background_accent.png</midtexture>
                        <info>ListItem.Property(ProgramProgressPercent)</info>
                    </control>
                    <control type="image">
                        <top>6</top>
                        <left>6</left>
                        <width>18</width>
                        <height>18</height>
                        <aspectratio>keep</aspectratio>
                        <texture>common/star.png</texture>
                        <visible>String.IsEqual(ListItem().Property(ChannelFavorite), true)</visible>
                    </control>
                    <control type="image">
                        <top>6</top>
                        <left>64</left>
                        <width>18</width>
                        <height>18</height>
                        <aspectratio>keep</aspectratio>
                        <texture>common/alarm.png</texture>
                        <visible>String.IsEqual(ListItem().Property(ProgramNextAlarm), true)</visible>
                    </control>
                    <control type="image">
                        <top>6</top>
                        <left>86</left>
                        <width>18</width>
                        <height>18</height>
                        <aspectratio>keep</aspectratio>
                        <texture>common/rerun.png</texture>
                        <visible>String.IsEqual(ListItem().Property(ProgramNowRerun), true)</visible>
                    </control>
                    <control type="image">
                        <top>6</top>
                        <left>108</left>
                        <width>18</width>
                        <height>18</height>
                        <aspectratio>keep</aspectratio>
                        <texture>common/record.png</texture>
                        <visible>String.IsEqual(ListItem().Property(ProgramNowRecordEvent), true)</visible>
                    </control>
                    <control type="image">
                        <top>6</top>
                        <left>130</left>
                        <width>18</width>
                        <height>18</height>
                        <aspectratio>keep</aspectratio>
                        <texture>common/recordseries.png</texture>
                        <visible>String.IsEqual(ListItem().Property(ProgramNowRecordSeries), true)</visible>
                    </control>
                </focusedlayout>
            </control>
            <control type="scrollbar" id="2001">
                <right>4</right>
                <width>8</width>
                <height>316</height>
                <onup>1001</onup>
                <onleft>1000</onleft>
                <onright>2000</onright>
                <texturesliderbarfocus>common/background_accent.png</texturesliderbarfocus>
                <texturesliderbar colordiffuse="60888888">common/background_light.png</texturesliderbar>
                <texturesliderbackground>-</texturesliderbackground>
            </control>
        </control>
    </controls>
</window>