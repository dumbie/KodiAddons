<?xml version="1.0" encoding="UTF-8"?>
<window>
    <animation effect="fade" time="100" start="50" end="100">WindowOpen</animation>
    <animation effect="fade" time="100" start="100" end="50">WindowClose</animation>
    <controls>
        <!-- Background -->
        <control type="image">
            <width>1280</width>
            <height>720</height>
            <texture colordiffuse="BEFFFFFF">common/background_dark.png</texture>
        </control>
        <!-- Window Popup -->
        <control type="group">
            <top>50</top>
            <left>300</left>
            <!-- Border -->
            <control type="image" id="5001">
                <left>-3</left>
                <width>726</width>
                <height>133</height>
                <texture>common/background_accent.png</texture>
            </control>
            <!-- Background -->
            <control type="image" id="5000">
                <width>720</width>
                <height>130</height>
                <texture>common/background_dark.png</texture>
            </control>
            <!-- Header Background -->
            <control type="image">
                <width>720</width>
                <height>60</height>
                <texture>common/background_accent.png</texture>
            </control>
            <!-- Header Label -->
            <control type="label" id="3000">
                <left>10</left>
                <width>700</width>
                <height>60</height>
                <aligny>center</aligny>
            </control>
            <!-- Summary Label -->
            <control type="textbox" id="3001">
                <top>64</top>
                <left>10</left>
                <width>700</width>
                <height>60</height>
                <align>left</align>
                <aligny>top</aligny>
                <wrapmultiline>true</wrapmultiline>
                <textcolor>FFFFFFFF</textcolor>
                <autoscroll delay="2000" time="2500" repeat="2500"/>
            </control>
            <!-- Footer Label -->
            <control type="label" id="3002">
                <top>565</top>
                <left>10</left>
                <width>700</width>
                <height>30</height>
            </control>
            <!-- Button Close -->
            <control type="button" id="4001">
                <left>650</left>
                <top>10</top>
                <width>60</width>
                <height>40</height>
                <texturefocus colordiffuse="50FFFFFF">common/background_dark.png</texturefocus>
                <texturenofocus colordiffuse="BEFFFFFF">common/background_dark.png</texturenofocus>
                <align>center</align>
                <label>X</label>
                <textcolor>FFFFFFFF</textcolor>
                <onup condition="Control.IsVisible(1000) + Integer.IsGreater(Container(1000).NumItems,0)">Control.setFocus(1000, 99999)</onup>
                <ondown condition="Control.IsVisible(1000) + Integer.IsGreater(Container(1000).NumItems,0)">Control.setFocus(1000, 0)</ondown>
            </control>
            <!-- Dialog Panel -->
            <control type="group" id="4000">
                <left>10</left>
                <top>130</top>
                <width>700</width>
                <height>auto</height>
                <control type="panel" id="1000">
                    <onup>4001</onup>
                    <ondown>4001</ondown>
                    <onright>2000</onright>
                    <pagecontrol>2000</pagecontrol>
                    <orientation>vertical</orientation>
                    <itemlayout width="700" height="45">
                        <control type="image">
                            <width>700</width>
                            <height>40</height>
                            <texture colordiffuse="2D888888">common/background_light.png</texture>
                        </control>
                        <control type="label">
                            <width>700</width>
                            <height>40</height>
                            <aligny>center</aligny>
                            <textcolor>FFFFFFFF</textcolor>
                            <selectedcolor>FF888888</selectedcolor>
                            <info>ListItem.Label</info>
                        </control>
                    </itemlayout>
                    <focusedlayout width="700" height="45">
                        <control type="image">
                            <width>700</width>
                            <height>40</height>
                            <texture colordiffuse="C8FFFFFF">common/background_accent.png</texture>
                        </control>
                        <control type="label">
                            <width>700</width>
                            <height>40</height>
                            <aligny>center</aligny>
                            <textcolor>FFFFFFFF</textcolor>
                            <selectedcolor>FF888888</selectedcolor>
                            <info>ListItem.Label</info>
                        </control>
                    </focusedlayout>
                </control>
                <control type="scrollbar" id="2000">
                    <right>0</right>
                    <width>8</width>
                    <height>355</height>
                    <onup>4001</onup>
                    <onleft>1000</onleft>
                    <orientation>vertical</orientation>
                    <texturesliderbarfocus>common/background_accent.png</texturesliderbarfocus>
                    <texturesliderbar colordiffuse="DC888888">common/background_light.png</texturesliderbar>
                    <texturesliderbackground>-</texturesliderbackground>
                </control>
            </control>
        </control>
    </controls>
</window>